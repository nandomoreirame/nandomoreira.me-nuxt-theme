$clearfix
  &:after
    content ""
    display table
    clear both

$container
  max-width: containerWidth
  margin-left: auto
  margin-right: auto
  padding-right: spacingSmall
  padding-left: spacingSmall

$article
  border-radius 3px
  background-color white
  box-shadow boxShadowBase
  transition box-shadow .2s timingFunction, transform .2s timingFunction
  padding spacingSmall spacingBase
  display block
  border 1px solid #eeeeee
  position relative
  min-height 360px
  @extend $clearfix
  &:hover,
  &:focus
    box-shadow boxShadowHover
    transform translate(0, -10px)
  &__description a
    color baseColor
    text-decoration none
    overflow hidden
    text-overflow ellipsis
    display -webkit-box
    -webkit-line-clamp 2
    -webkit-box-orient vertical
  &__meta
    text-transform uppercase
    opacity 0.65
    letter-spacing 0.1em
    font-size fontSizeMini
    padding-top spacingSmall
    padding-bottom spacingSmall
  &__title
    font-size 2rem
    margin-top 0.2em
    margin-bottom 0.2em

$button
  border 3px solid transparent
  background-color #2c97de
  border-radius .25em
  padding spacingSmall spacingBase
  color #fff
  text-align center
  float right
  cursor pointer
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  appearance none
  line-height 1
  display inline-block
  transition .2s background-color timingFunction, .2s color timingFunction
  font-weight fontWeightBold
  text-decoration none
  font-size inherit
  &:focus
    outline none
  &:active
    transform scale(0.99)

$buttonDefault
  @extend $button
  border-color primaryColor
  background-color primaryColor
  color #fff
  &:hover,
  &:focus
    background-color lighten(primaryColor, 10%)
    border-color lighten(primaryColor, 10%)
    color #fff

$buttonGhost
  @extend $button
  border-color primaryColor
  background-color transparent
  color primaryColor
  &:hover,
  &:focus
    background-color primaryColor
    color #fff

$buttonGhostWhite
  @extend $button
  background-color transparent
  border-color #fff
  color #fff
  &:hover,
  &:focus
    background-color rgba(#fff, .2)
    outline-color #fff
    color #fff

$buttonLarge
  border-radius 8px
  padding spacingBase
  font-size fontSizeBase

$buttonSmall
  font-size .8rem
  padding spacingMini
